# Turd News Network - Environment Variables
# Copy this file to .env and fill in your values

# REQUIRED: Discord Bot Token (get from https://discord.com/developers/applications)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# REQUIRED: Discord Webhook URL (optional - for alerts)
DISCORD_WEBHOOK_URL=your_webhook_url_here

# Optional: Alert Role ID (for pinging roles on alerts)
ALERT_ROLE_ID=your_role_id_here
